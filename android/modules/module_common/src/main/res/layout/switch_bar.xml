<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_view_margin_default"
    android:layout_marginTop="@dimen/common_view_margin_fit"
    android:layout_marginEnd="@dimen/common_view_margin_default"
    android:layout_marginBottom="@dimen/common_view_margin_mini"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:gravity="center"
    android:padding="@dimen/common_view_margin_default"
    app:cardBackgroundColor="?colorPrimaryContainer"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/switch_bar_height"
        android:gravity="center"
        android:padding="@dimen/common_view_margin_default">

        <TextView
            android:id="@+id/switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Switch"
            android:textColor="?android:textColorPrimary"
            tools:text="Label" />

        <github.tornaco.android.thanos.widget.ToggleSwitch
            android:id="@+id/switch_widget"
            style="@style/SwitchStyleMD.SwitchBar"
            tools:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

